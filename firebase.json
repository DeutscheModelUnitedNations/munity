{
  "hosting": {
    "public": "dist/wwwroot",
    "ignore": [
      "firebase.json",
      "**/.*"
    ],
    "headers": [{
      "source" : "**",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "no-cache, no-store, must-revalidate"
      },
      {
        "key" : "Pragma",
        "value" : "no-cache"
      },
      {
        "key" : "Expires",
        "value" : "0"
      }]
    },
    {
      "source":
        "**/*.@(jpg|jpeg|gif|png|svg|webp|css|eot|otf|ttf|ttc|woff|woff2|font.css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=604800"
        }
      ]
    }],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}