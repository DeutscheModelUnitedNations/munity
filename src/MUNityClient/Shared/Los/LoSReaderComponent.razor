@using MUNity.Models.ListOfSpeakers;
@inject MUNityClient.Services.ListOfSpeakerService listOfSpeakerService;

@if (ViewModel?.SourceList != null)
{
    <div class="row col-12 m-0 p-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    @if (ViewModel.SourceList.CurrentSpeaker != null)
                    {
                        <h5>Es spricht:</h5>
                        <h5>@ViewModel.SourceList.CurrentSpeaker.Name</h5>

                        @if (ViewModel.OutOfSpeakerTime)
                        {
                            <h6 class="text-danger">Bitte zum Ende kommen</h6>
                        }
                        else if (ViewModel.LowOnSpeakerTime)
                        {
                            <h6 class="text-danger">Verbleibende Zeit: @ViewModel.SourceList.RemainingSpeakerTime.ToString(@"mm\:ss")</h6>
                        }
                        else
                        {
                            <h6>Verbleibende Zeit: @ViewModel.SourceList.RemainingSpeakerTime.ToString(@"mm\:ss")</h6>
                        }
                    }
                    else
                    {
                        <h5>Aktuell kein(e) RednerIn</h5>
                        <h5>Redezeit: @ViewModel.SourceList.SpeakerTime.ToString(@"mm\:ss")</h5>
                    }
                </div>
                <div class="card-body">
                    <h4>Redeliste</h4>
                    @if (ViewModel.SourceList.Speakers.Any())
                    {
                        <ul class="list-group">
                            @foreach (var speaker in ViewModel.SourceList.Speakers)
                            {
                                
                            <li class="list-group-item">
                                @if (!string.IsNullOrEmpty(speaker.Iso))
                                {
                                    <img src="/img/flags/small/@(speaker.Iso).png" />
                                }
                                else
                                {
                                    <img src="/img/flags/small/un.png" />
                                }
                                @speaker.Name
                            </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Niemand auf der Redeliste</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @* Fragen und Kurzbemerkungen *@
    <div class="row col-12 m-0 p-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    @if (ViewModel.SourceList.CurrentQuestion != null)
                    {
                        <h5>Es spricht:</h5>
                        <h5>@ViewModel.SourceList.CurrentQuestion.Name</h5>

                        @if (ViewModel.SourceList.RemainingQuestionTime.TotalSeconds <= 0)
                        {
                            <h6 class="text-danger">Bitte zum Ende kommen</h6>
                        }
                        else if (ViewModel.SourceList.RemainingQuestionTime.TotalSeconds <= 10)
                        {
                            <h6 class="text-danger">Verbleibende Zeit: @ViewModel.SourceList.RemainingQuestionTime.ToString(@"mm\:ss")</h6>
                        }
                        else
                        {
                            <h6>Verbleibende Zeit: @ViewModel.SourceList.RemainingQuestionTime.ToString(@"mm\:ss")</h6>
                        }
                    }
                    else
                    {
                        <h5>Aktuell keine Frage oder Kurzbemerkung</h5>
                        <h5>Redezeit: @ViewModel.SourceList.QuestionTime.ToString(@"mm\:ss")</h5>
                    }
                </div>
                <div class="card-body">
                    <h4>Warteliste Fragen und Kurzbemerkungen</h4>
                    @if (ViewModel.SourceList.Questions.Any())
                    {
                        <ul class="list-group">
                            @foreach (var speaker in ViewModel.SourceList.Questions)
                            {
                                <li class="list-group-item">@speaker.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Niemand auf der Warteliste</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

