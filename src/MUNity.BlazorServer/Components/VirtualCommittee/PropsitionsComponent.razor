							<td class="fw-bold text-muted ">@petition.PetitionDate</td>
							<td class="hidden-sm">
								<img src="@($"/img/flags/small/{petition.User.DelegateCountry?.Iso}.png")" alt="" width="32px">
								@petition.User.RoleName
							</td>
							<td class="text-nowrap">
								<h6>@petition.PetitionType.Name</h6>
							</td>
							<td class="text-blue fw-bold"><button class="btn btn-sm btn-success">Antrag hervorheben</button></td>
							<td class="text-nowrap"><button class="btn btn-sm btn-danger">Antrag ablehnen</button></td>
						</tr>
					}

