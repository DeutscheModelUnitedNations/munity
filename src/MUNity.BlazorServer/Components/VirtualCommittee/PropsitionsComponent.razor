						<td class="hidden-sm">
							<img src="/img/flags/small/de.png" alt="" width="32px">
							Deutschland
						</td>
						<td class="text-nowrap">
							<h6> Antrag auf BLUB</h6>
						</td>
						<td class="text-blue fw-bold"><button class="btn btn-sm btn-success">Antrag bearbeiten</button></td>
						<td class="text-nowrap"><button class="btn btn-sm btn-danger">Antrag ablehnen</button></td>
					</tr>
					
					
				</tbody>
			</table>

			@if (committeeId != null)
			{
					@foreach(var petitionType in dbContext.Committees.Where(n => n.CommitteeId == committeeId).Select(n => n.AllowedPetitionTypes).FirstOrDefault())
					{
						<button class="btn m-1 btn-primary">@petitionType.Name</button>
					}
			}
			
