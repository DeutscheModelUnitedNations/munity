@using MUNity.Database.Models.Conference.Roles

<div class="d-flex mb-2  @((Highlight) ? "font-weight-bolder bg-teal-800 p-2" : null)">
	<div class="d-flex align-items-center">
		<!-- icon for online: fa-signal text-lime -->
		<!-- icon if offline: fa-ban text-red-->
		<i class="fa @((IsOnline) ? "fa-signal text-lime" : "fa-ban text-red")  fs-8px me-2"></i>
		<img class="me-2"  src="@($"/img/flags/small/{Role?.DelegateCountry?.Iso.ToLower()}.png")" style="width: 36px; height: 18px"/>
		@Role?.RoleName
	</div>
	<div class="d-flex align-items-center ms-auto">
		<!-- Has hand raised-->
		<div class="@(RaisesHand ? "text-white" : "text-gray-500") fs-13px"><i class="fa fa-hand-paper" title="..."></i></div>
		<div class="w-10px"></div>
		<!-- Has an amendment/request on the top -->
		<div class="@(hasProposition ? "text-white" : "text-gray-500") fs-13px"><i class="fa fa-bookmark" title="Stellt einen Antrag"></i></div>
		<div class="w-10px"></div>
		<!-- Is currently speaking -->
		<div class="@(wantsTpSpeak ? "text-white" : "text-gray-500") fs-13px"><i class="fa fa-bullhorn" title="Steht auf der Redeliste/Fragen"></i></div>
		<div class="w-10px"></div>
		<!-- Marked as present -->
		<div class="@(IsPresent ? "text-white" : "text-gray-500")  fs-13px"><i class="fa fa-check" title="Markiert als Anwesend/Abwesend"></i></div>
	</div>
</div>



@code {
	[Parameter] public ConferenceDelegateRole Role { get; set; }

	[Parameter] public bool Highlight { get; set; }

	[Parameter] public bool IsOnline { get; set; }

	[Parameter] public bool RaisesHand { get; set; }

	[Parameter] public bool hasProposition { get; set; }

	[Parameter] public bool wantsTpSpeak { get; set; }

	[Parameter] public bool IsPresent { get; set; }

}
